<body>
  <h2>Produits</h2>
  
  <div class="row">
  <!-- Filtres -->
  <div class="col-lg-3">

    <p class="lead">Recherche</p>
    <input type="text" class="form-control" placeholder="Rechercher un produit"/>
    <hr/>

    <p class="lead">Catégorie</p>
    <hr/>
    <% for (const cat of cats ) { %>
      <input type="checkbox" name=<%= cat.name %>><label><%= cat.name %></label><br />
    <% } %>
    <p class="lead">Prix</p>
    <input type="radio" name="prix" value="asc"> Croissant<br/>
    <input type="radio" name="prix" value="desc"> Décroissant<br/>
  </div>

  <!-- Liste -->
  <div class="col-lg-9 border-left card-columns">
    <!-- Format d'un article -->
    <% for (const prod of prods ) { %>
    <div class="card">
      <img class="card-img-top" src=<%= prod.img0 %> style="padding: 1em; " />
      <div class="card-body">
        <h6 class="card-subtitle text-muted"><%= prod.catName %></h6>
        <h5 class="card-title"><%= prod.prodName %></h5>
        <p class="font-weight-light float-left" style="font-size:1.5em"><%= prod.price %>€</p>
        <p class="float-right">
          <a href=<%= `/produits/${prod.id}` %> class="btn btn-primary"><i class="fa-shopping-bag fas"></i></a>
        </p>
      </div>
    </div>
    <% } %>
  </div>
  </div>
</body>